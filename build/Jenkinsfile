pipeline {
    agent none 
    stages {
        stage('create eks cluster: udacity-cluster') {
            agent {
                docker { image 'weaveworks/eksctl' }
            }        
            steps {
                withAWS(credentials: 'aws-creds', region: 'eu-central-1') {
                    sh 'eksctl create cluster -f cluster.yaml'
                }
            }
        }
    }
}