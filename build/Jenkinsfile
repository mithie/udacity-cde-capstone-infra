pipeline {
    agent none 
    stages {
        stage('create eks cluster: udacity-cluster') {
            agent {
                docker { image 'weaveworks/eksctl' }
            }        
            steps {
                withAWS(credentials: 'aws-creds', region: 'eu-central-1') {
                    sh 'aws sts get-caller-identity'
                    sh 'eksctl version'
                    sh 'eksctl create cluster --name udacity-cluster --region eu-central-1'
                }
            }
        }
    }
}